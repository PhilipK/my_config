# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=25

[i3-focusedwindow]
command=$SCRIPT_DIR/i3-focusedwindow/i3-focusedwindow 50
interval=persist

[mediaplayer]
command=$SCRIPT_DIR/mediaplayer/mediaplayer
instance=spotify
interval=10
signal=10

[cpu_usage2]
command=$SCRIPT_DIR/cpu_usage2/cpu_usage2
markup=pango
interval=persist
LABEL=
DECIMALS=0

[memory]
label=
command=$SCRIPT_DIR/memory/memory
interval=5
PERCENT=false

[disk]
command=$SCRIPT_DIR/disk/disk
LABEL=
DIR=/
ALERT_LOW=10
interval=60

[volume]
command=pamixer --get-volume-human
interval=once
signal=10

[time]
command=date '+%d-%m %H:%M'
interval=59

